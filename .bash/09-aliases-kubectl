if command -v kubectl > /dev/null 2>&1; then
  # based on https://github.com/aviadlevy/dotfiles
  alias k='kubectl'
  alias ka='kubectl apply --recursive -f'
  alias kak='kubectl apply -k'
  alias kk='kubectl kustomize'
  alias kex='kubectl exec -i -t'
  alias klo='kubectl logs -f'
  alias klop='kubectl logs -f -p'
  alias kp='kubectl proxy'
  alias kpfp='kubectl port-forward'
  alias kg='kubectl get'
  alias kd='kubectl describe'
  alias krm='kubectl delete'
  alias krun='kubectl run --rm --restart=Never --image-pull-policy=IfNotPresent -i -t'
  alias kgpo='kubectl get pods'
  alias kdpo='kubectl describe pods'
  alias krmpo='kubectl delete pods'
  alias kgdep='kubectl get deployment'
  alias kddep='kubectl describe deployment'
  alias krmdep='kubectl delete deployment'
  alias kgsvc='kubectl get service'
  alias kdsvc='kubectl describe service'
  alias krmsvc='kubectl delete service'
  alias kging='kubectl get ingress'
  alias kding='kubectl describe ingress'
  alias krming='kubectl delete ingress'
  alias kgcm='kubectl get configmap'
  alias kdcm='kubectl describe configmap'
  alias krmcm='kubectl delete configmap'
  alias kgsec='kubectl get secret'
  alias kdsec='kubectl describe secret'
  alias krmsec='kubectl delete secret'
  alias kgno='kubectl get nodes'
  alias kdno='kubectl describe nodes'
  alias kgns='kubectl get namespaces'
  alias kdns='kubectl describe namespaces'
  alias krmns='kubectl delete namespaces'
  alias kgoyaml='kubectl get -o=yaml'
  alias kgpooyaml='kubectl get pods -o=yaml'
  alias kgdepoyaml='kubectl get deployment -o=yaml'
  alias kgsvcoyaml='kubectl get service -o=yaml'
  alias kgingoyaml='kubectl get ingress -o=yaml'
  alias kgcmoyaml='kubectl get configmap -o=yaml'
  alias kgsecoyaml='kubectl get secret -o=yaml'
  alias kgnooyaml='kubectl get nodes -o=yaml'
  alias kgnsoyaml='kubectl get namespaces -o=yaml'
  alias kgowide='kubectl get -o=wide'
  alias kgpoowide='kubectl get pods -o=wide'
  alias kgdepowide='kubectl get deployment -o=wide'
  alias kgsvcowide='kubectl get service -o=wide'
  alias kgingowide='kubectl get ingress -o=wide'
  alias kgcmowide='kubectl get configmap -o=wide'
  alias kgsecowide='kubectl get secret -o=wide'
  alias kgnoowide='kubectl get nodes -o=wide'
  alias kgnsowide='kubectl get namespaces -o=wide'
  # changed from aviadlevy version
  alias kpf='f() { kubectl port-forward $1 $2:$3 };f'
  alias kghp='kubectl get hpa'
  alias kghpoyaml='kubectl get hpa -o=yaml'
  alias kehp='kubectl edit hpa'
  alias kgcj='kubectl get cronjob'
  alias kgcjoyaml='kubectl get cronjob -o=yaml'
  alias kgj='kubectl get job'
  alias kgjoyaml='kubectl get job -o=yaml'
  alias kdj='kubectl describe job'
  alias kgso='kubectl get scaledobjects'
  alias kgsooyaml='kubectl get scaledobjects -oyaml'
  alias keso='kubectl edit scaledobjects'
  alias kgsj='kubectl get scaledjob'
  alias kgsjoyaml='kubectl get scaledjob -oyaml'
  alias kesj='kubectl edit scaledjob'
  alias kedep='kubectl edit deployment'
  alias kexsh='f() { kubectl exec -it $1 -- sh };f'
  alias kexbash='f() { kubectl exec -it $1 -- bash };f'
  alias kgsts='kubectl get sts'

  # additional aliases
  alias kgpvc='kubectl get pvc'
  alias kdpvc='kubectl describe pvc'
  alias kgds='kubectl get daemonsets'
  alias kdds='kubectl describe daemonsets'
  alias krore='kubectl rollout restart'

  # setup kubectl autocomplete, as well as with the k alias
  source <(kubectl completion bash)
  complete -o default -F __start_kubectl k

  if command -v fzf > /dev/null 2>&1 && command -v findpod > /dev/null 2>&1; then
    # based on https://github.com/aviadlevy/dotfiles
    # https://github.com/thecasualcoder/kube-fzf
    alias kgpofzf='findpod'
    alias kdpofzf='describepod'
    alias klofzf='tailpod'
    alias kexfzf='execpod'
    alias kpffzf='pfpod'
  fi
fi
